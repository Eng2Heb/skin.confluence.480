<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="visualisation" id="2">
			<!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
			<description>visualisation</description>
			<left>0</left>
			<top>0</top>
			<width>720</width>
			<height>480</height>
		</control>
		<control type="image">
			<description>Fanart Image for Artist</description>
			<left>0</left>
			<top>0</top>
			<width>720</width>
			<height>480</height>
			<aspectratio>scale</aspectratio>
			<texture background="true">$INFO[Player.Art(fanart)]</texture>
			<colordiffuse>AAFFFFFF</colordiffuse>
			<visible>!String.IsEmpty(Player.Art(fanart)) + !Skin.HasSetting(HideVisualizationFanart)</visible>
			<fadetime>600</fadetime>
		</control>
		<!-- media infos -->
		<control type="group">
			<depth>DepthOSD</depth>
			<animation effect="fade" time="150">VisibleChange</animation>
			<visible>[Player.ShowInfo | Window.IsActive(MusicOSD)] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(PVRRadioRDSInfo) | Window.IsVisible(OSDAudioDSPSettings) | Window.IsVisible(Addon)]</visible>
			<control type="image">
				<left>-11</left>
				<top>-100</top>
				<width>742</width>
				<height>170</height>
				<texture flipy="true" border="1">HomeNowPlayingBack.png</texture>
			</control>
			<control type="label">
				<description>Partymode Header label</description>
				<left>16</left>
				<top>3</top>
				<width>450</width>
				<height>16</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$LOCALIZE[589]</label>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
			<control type="label">
				<description>Normal Header label</description>
				<left>16</left>
				<top>3</top>
				<width>450</width>
				<height>16</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[musicplayer.Playlistposition,$LOCALIZE[554]: ]$INFO[musicplayer.Playlistlength, / ]</label>
				<visible>!MusicPartyMode.Enabled</visible>
			</control>
			<control type="label">
				<description>Clock label</description>
				<left>253</left>
				<top>3</top>
				<width>450</width>
				<height>16</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[System.Time]</label>
				<animation effect="slide" start="0,0" end="-16,0" time="0" condition="Player.Muted">conditional</animation>
				<animation effect="slide" start="0,0" end="-39,0" time="0" condition="system.getbool(input.enablemouse) + Window.IsVisible(MusicOSD)">conditional</animation>
			</control>
			<control type="image">
				<left>-11</left>
				<top>153r</top>
				<width>742</width>
				<height>153</height>
				<texture border="1">HomeNowPlayingBack.png</texture>
			</control>
			<control type="image">
				<depth>DepthOSDPopout</depth>
				<description>cover image</description>
				<left>11</left>
				<top>166r</top>
				<width>168</width>
				<height>153</height>
				<texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<bordertexture border="8">ThumbShadow.png</bordertexture>
				<bordersize>8</bordersize>
			</control>
			<control type="group">
				<left>185</left>
				<top>173r</top>
				<control type="label" id="1">
					<description>Heading label</description>
					<left>0</left>
					<top>0</top>
					<width>511</width>
					<height>16</height>
					<align>left</align>
					<font>font13</font>
					<label>$LOCALIZE[31040]</label>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<animation effect="slide" start="0,0" end="0,16" time="0" condition="String.IsEmpty(MusicPlayer.Artist) + String.IsEmpty(MusicPlayer.Album)">conditional</animation>
				</control>
				<control type="label" id="1">
					<description>Artist label</description>
					<left>11</left>
					<top>20</top>
					<width>511</width>
					<height>16</height>
					<align>left</align>
					<font>font12</font>
					<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
					<textcolor>grey2</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="grouplist">
					<left>11</left>
					<top>66</top>
					<width>511</width>
					<height>40</height>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<visible>!system.getbool(audiooutput.dspaddonsenabled)</visible>
					<control type="label">
						<width min="5" max="358">auto</width>
						<height>30</height>
						<font>font30</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[Player.Title]</label>
						<textcolor>orange</textcolor>
						<scroll>true</scroll>
					</control>
					<control type="image">
						<description>Audio Codec Image</description>
						<width>45</width>
						<height>36</height>
						<texture>$INFO[MusicPlayer.Codec,flagging/audio/,.png]</texture>
						<visible>!Player.ChannelPreviewActive</visible>
					</control>
					<control type="group">
						<description>Rating</description>
						<width>180</width>
						<height>36</height>
						<control type="image">
							<description>rating back</description>
							<left>0</left>
							<top>0</top>
							<width>180</width>
							<height>36</height>
							<texture border="2">flagging/blank.png</texture>
						</control>
						<control type="image">
							<description>User Rating</description>
							<left>1</left>
							<top>3</top>
							<width>177</width>
							<height>30</height>
							<texture fallback="ratings/0.png">$INFO[MusicPlayer.UserRating,ratings/,.png]</texture>
						</control>
					</control>
				</control>

				<control type="grouplist">
					<left>11</left>
					<top>40</top>
					<width>511</width>
					<height>23</height>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<visible>system.getbool(audiooutput.dspaddonsenabled)</visible>
					<control type="label">
						<width min="5" max="313">auto</width>
						<height>13</height>
						<font>font30</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[Player.Title]</label>
						<textcolor>orange</textcolor>
						<scroll>true</scroll>
					</control>
					<control type="image">
						<description>ADSP Master Mode Image</description>
						<width>45</width>
						<height>19</height>
						<visible>![String.IsEmpty(ADSP.MasterOwnIcon) | Player.ChannelPreviewActive]</visible>
						<texture>$INFO[ADSP.MasterOwnIcon]</texture>
					</control>
					<control type="image">
						<description>Audio Codec Image</description>
						<width>45</width>
						<height>19</height>
						<visible>String.IsEmpty(ADSP.MasterOverrideIcon) + !Player.ChannelPreviewActive</visible>
						<texture>$INFO[MusicPlayer.Codec,flagging/audio/,.png]</texture>
					</control>
					<control type="image">
						<description>ADSP Audio Codec Override Image</description>
						<width>45</width>
						<height>19</height>
						<visible>![String.IsEmpty(ADSP.MasterOwnIcon) | Player.ChannelPreviewActive]</visible>
						<texture>$INFO[ADSP.MasterOverrideIcon]</texture>
					</control>
					<control type="group">
						<description>Rating</description>
						<width>96</width>
						<height>19</height>
						<control type="image">
							<description>rating back</description>
							<left>0</left>
							<top>0</top>
							<width>96</width>
							<height>19</height>
							<texture border="2">flagging/blank.png</texture>
						</control>
						<control type="image">
							<description>User Rating</description>
							<left>1</left>
							<top>3</top>
							<width>94</width>
							<height>14</height>
							<texture fallback="ratings/0.png">$INFO[MusicPlayer.UserRating,ratings/,.png]</texture>
						</control>
					</control>
				</control>
				<control type="label">
					<left>0</left>
					<top>43r</top>
					<width>511</width>
					<height>33</height>
					<label>$LOCALIZE[19031]: $INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
					<align>center</align>
					<aligny>center</aligny>
					<font>font12</font>
					<textcolor>grey</textcolor>
					<scroll>true</scroll>
					<visible>MusicPlayer.HasNext + !Window.IsVisible(MusicOSD)</visible>
					<animation effect="fade" time="150">VisibleChange</animation>
				</control>
			</control>
			<control type="group">
				<left>185</left>
				<top>63r</top>
				<control type="label">
					<left>0</left>
					<top>0</top>
					<width>70</width>
					<height>26</height>
					<font>font13</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Time(hh:mm:ss)]</label>
				</control>
				<control type="progress">
					<description>Progressbar</description>
					<left>70</left>
					<top>10</top>
					<width>376</width>
					<height>10</height>
					<info>Player.Progress</info>
				</control>
				<control type="label">
					<left>447</left>
					<top>0</top>
					<width>70</width>
					<height>26</height>
					<font>font13</font>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Duration(hh:mm:ss)]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
