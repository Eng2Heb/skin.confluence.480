<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>450</defaultcontrol>
	<include>dialogeffect</include>
	<coordinates>
		<system>1</system>
		<left>{{ScaleX('315')}}</left>
		<top>{{ScaleY('260')}}</top>
	</coordinates>
	<controls>
		<control type="image">
			<left>{{ScaleX('0')}}</left>
			<top>{{ScaleY('0')}}</top>
			<width>{{ScaleX('650')}}</width>
			<height>{{ScaleY('200')}}</height>
			<texture border="{{ScaleBorder('20')}}">OverlayDialogBackground.png</texture>
		</control>
