			<onleft>13</onleft>
			<onright>13</onright>
			<onup>13</onup>
			<ondown>13</ondown>
			<visible>system.getbool(input.enablemouse)</visible>
		</control>
		<control type="label">
			<description>heading label</description>
			<left>{{ScaleX('40')}}</left>
			<top>{{ScaleY('18')}}</top>
			<width>{{ScaleX('570')}}</width>
			<height>{{ScaleY('30')}}</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font13</font>
			<label>$INFO[ListItem.Label]</label>
			<textcolor>white</textcolor>
		</control>
		<control type="label">
			<left>{{ScaleX('40')}}</left>
			<top>{{ScaleY('60')}}</top>
			<width>{{ScaleX('570')}}</width>
			<height>{{ScaleY('30')}}</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font12</font>
			<label>31060</label>
			<textcolor>grey2</textcolor>
		</control>
		<control type="image">
			<left>{{ScaleX('50')}}</left>
			<top>{{ScaleY('110')}}</top>
			<width>{{ScaleX('20')}}</width>
			<height>{{ScaleY('25')}}</height>
			<texture>scroll-left-focus.png</texture>
			<visible>Container(450).HasPrevious</visible>
		</control>
		<control type="image">
			<left>{{ScaleX('575')}}</left>
			<top>{{ScaleY('110')}}</top>
			<width>{{ScaleX('20')}}</width>
			<height>{{ScaleY('25')}}</height>
			<texture>scroll-right-focus.png</texture>
			<visible>Container(450).HasNext</visible>
		</control>
		<control type="list" id="450">
			<left>{{ScaleX('85')}}</left>
			<top>{{ScaleY('105')}}</top>
			<width>{{ScaleX('480')}}</width>
			<height>{{ScaleY('100')}}</height>
			<onleft>450</onleft>
			<onright>450</onright>
			<onup>450</onup>
			<ondown>450</ondown>
			<orientation>horizontal</orientation>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<itemlayout width="{{ScaleX('40')}}">
				<control type="image">
					<left>{{ScaleX('0')}}</left>
					<top>{{ScaleY('0')}}</top>
					<width>{{ScaleX('38')}}</width>
					<height>{{ScaleY('32')}}</height>
					<aspectratio>stretch</aspectratio>
					<texture>StackNF.png</texture>
				</control>
			</itemlayout>
			<focusedlayout width="{{ScaleX('40')}}">
				<control type="image">
					<left>{{ScaleX('0')}}</left>
					<top>{{ScaleY('0')}}</top>
					<width>{{ScaleX('38')}}</width>
					<height>{{ScaleY('32')}}</height>
					<aspectratio>stretch</aspectratio>
					<texture>StackFO.png</texture>
				</control>
			</focusedlayout>
		</control>
		<control type="label">
			<left>{{ScaleX('40')}}</left>
			<top>{{ScaleY('155')}}</top>
			<width>{{ScaleX('570')}}</width>
			<height>{{ScaleY('22')}}</height>
			<font>font13_title</font>
			<align>center</align>
			<info>Container(450).ListItem.Label</info>
		</control>
	</controls>
