<?xml version="1.0" encoding="UTF-8"?>
<window>
	<allowoverlay>no</allowoverlay>
	<coordinates>
		<system>1</system>
		<left>{{ScaleX('680')}}</left>
		<top>{{ScaleY('0')}}</top>
	</coordinates>
	<controls>
		<control type="group">
			<animation effect="slide" start="{{ScaleBorder2('600,0')}}" end="{{ScaleBorder2('0,0')}}" time="300" tween="quadratic" easing="out" condition="!Player.ShowCodec">WindowOpen</animation>
			<animation effect="slide" start="{{ScaleBorder2('600,0')}}" end="{{ScaleBorder2('0,0')}}" time="300" delay="300" tween="quadratic" easing="out" condition="Player.ShowCodec">WindowOpen</animation>
			<animation effect="slide" start="{{ScaleBorder2('0,0')}}" end="{{ScaleBorder2('600,0')}}" time="150" tween="quadratic" easing="out">WindowClose</animation>
			<control type="image">
				<description>media info background image</description>
				<left>{{ScaleX('0')}}</left>
				<top>{{ScaleY('0')}}</top>
				<width>{{ScaleX('600')}}</width>
				<height>{{ScaleY('720')}}</height>
				<colordiffuse>BBFFFFFF</colordiffuse>
				<texture border="{{ScaleBorder('20,0,0,0')}}" flipx="true">MediaBladeSub.png</texture>
			</control>
			<control type="button">
				<description>Close Window button</description>
				<left>{{ScaleX('20')}}</left>
				<top>{{ScaleY('0')}}</top>
				<width>{{ScaleX('64')}}</width>
				<height>{{ScaleY('32')}}</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<control type="label">
				<description>header label</description>
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('30')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('30')}}</height>
				<font>font30_title</font>
				<label>$ADDON[script.cu.lrclyrics 32199]</label>
				<align>right</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<description>Artist label</description>
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('60')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('30')}}</height>
				<font>font13_title</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<align>right</align>
				<aligny>center</aligny>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<description>Song label</description>
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('85')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('30')}}</height>
				<font>font13_title</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<align>right</align>
				<aligny>center</aligny>
				<textcolor>grey</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="image">
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('120')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('4')}}</height>
				<texture>separator.png</texture>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('130')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('500')}}</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="{{ScaleY('25')}}">
					<control type="label">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('550')}}</width>
						<height>{{ScaleY('25')}}</height>
						<font>font13</font>
						<aligny>center</aligny>
						<align>center</align>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="{{ScaleY('25')}}">
					<control type="label">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('550')}}</width>
						<height>{{ScaleY('25')}}</height>
						<font>font13</font>
						<aligny>center</aligny>
						<align>center</align>
						<shadowcolor>black</shadowcolor>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('550')}}</width>
						<height>{{ScaleY('25')}}</height>
						<font>font13</font>
						<aligny>center</aligny>
						<align>center</align>
						<shadowcolor>black</shadowcolor>
						<textcolor>selected</textcolor>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="111">
				<description>Next page button</description>
				<left>{{ScaleX('520')}}</left>
				<top>{{ScaleY('650')}}</top>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>110</onleft>
				<onright>110</onright>
				<ondown>110</ondown>
				<onup>110</onup>
				<textcolor>blue</textcolor>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(110)</visible>
			</control>
			<control type="label" id="2">
				<description>Pick label</description>
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('130')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('30')}}</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font13_title</font>
				<label>31203</label>
				<textcolor>white</textcolor>
				<visible>Control.IsVisible(120) + !Control.IsVisible(110)</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('170')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('440')}}</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<scrolltime>200</scrolltime>
				<animation effect="slide" start="{{ScaleBorder2('0,0')}}" end="{{ScaleBorder2('20,0')}}" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="{{ScaleY('40')}}">
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('550')}}</width>
						<height>{{ScaleY('41')}}</height>
						<texture border="{{ScaleBorder('5')}}">MenuItemNF.png</texture>
					</control>
					<control type="label">
						<left>{{ScaleX('10')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('530')}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font13</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="{{ScaleY('40')}}">
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('550')}}</width>
						<height>{{ScaleY('41')}}</height>
						<visible>!Control.HasFocus(120)</visible>
						<texture border="{{ScaleBorder('5')}}">MenuItemNF.png</texture>
					</control>
					<control type="image">
						<left>{{ScaleX('0')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('550')}}</width>
						<height>{{ScaleY('41')}}</height>
						<visible>Control.HasFocus(120)</visible>
						<texture border="{{ScaleBorder('5')}}">MenuItemFO.png</texture>
					</control>
					<control type="label">
						<left>{{ScaleX('10')}}</left>
						<top>{{ScaleY('0')}}</top>
						<width>{{ScaleX('530')}}</width>
						<height>{{ScaleY('40')}}</height>
						<font>font13</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="121">
				<description>Next page button</description>
				<left>{{ScaleX('520')}}</left>
				<top>{{ScaleY('650')}}</top>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<textcolor>blue</textcolor>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(120)</visible>
			</control>
			<control type="image">
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('640')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('4')}}</height>
				<texture>separator.png</texture>
			</control>
			<control type="label">
				<description>Scraper label</description>
				<left>{{ScaleX('30')}}</left>
				<top>{{ScaleY('680')}}</top>
				<width>{{ScaleX('550')}}</width>
				<height>{{ScaleY('30')}}</height>
				<label>$LOCALIZE[31205] - $INFO[Control.GetLabel(200)]</label>
				<font>font12_title</font>
				<align>right</align>
				<aligny>center</aligny>
				<textcolor>grey2</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label" id="200">
				<description>Scraper label</description>
				<visible>false</visible>
			</control>
		</control>
	</controls>
</window>
